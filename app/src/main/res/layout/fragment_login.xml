<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="320:176"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/background_login"/>
    <ImageView
        android:id="@+id/img_union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bg"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="320:418"
        app:layout_constraintWidth_percent="0.1"
        android:src="@drawable/ic_union"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_login"
        app:font_type="@string/roboto_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/img_union"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_bg"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="112dp"
        app:layout_constraintRight_toRightOf="@+id/img_bg"
        android:layout_marginRight="112dp"
        />
    <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="14dp"
        android:paddingLeft="13dp"
        android:background="@drawable/background_editextpng"/>
    <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/edt_password"
        android:hint="Password"
        app:layout_constraintLeft_toLeftOf="@+id/edt_email"
        app:layout_constraintRight_toRightOf="@+id/edt_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:layout_marginTop="12dp"
        android:background ="@drawable/background_editextpng"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="13dp"
        android:paddingTop="10dp"
        android:paddingBottom="14dp"/>
    <Button
        android:textColor="#fff"
        android:id="@+id/btn_logemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP BẰNG EMAIL"
        android:background="@drawable/bg_button_orange"
        app:layout_constraintLeft_toLeftOf="@+id/edt_email"
        app:layout_constraintRight_toRightOf="@id/edt_email"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        android:layout_marginTop="23dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@+id/btn_logemail"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="112dp"
         app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="113dp"/>
    <Button
        android:id="@+id/btn_logface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP BẰNG FACEBOOK"
        android:background="@drawable/bg_button_blue"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="@+id/edt_email"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/edt_email"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password"
        android:layout_marginTop="17dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_creatacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creat_account"
        android:textColor="@color/colorBlueThin"
        app:layout_constraintTop_toBottomOf="@id/btn_logface"
        android:layout_marginTop="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/edt_email"
        android:layout_marginLeft="117dp"
        app:layout_constraintRight_toRightOf="@+id/edt_email"
        android:layout_marginRight="119dp"/>












</androidx.constraintlayout.widget.ConstraintLayout>