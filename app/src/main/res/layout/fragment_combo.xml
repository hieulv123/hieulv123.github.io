<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview_combo"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/conten_combo">
        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/headerCombo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#E58235"
            android:gravity="center"
            android:text="Danh sách món Combo"
            android:textColor="#fff"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_backSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintLeft_toLeftOf="@id/headerCombo"
            app:layout_constraintTop_toTopOf="@id/headerCombo" />
            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edt_searchCombo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_search"
                android:hint="Search"
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:paddingBottom="13dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="@id/headerCombo"
                app:layout_constraintRight_toRightOf="@id/headerCombo"
                app:layout_constraintTop_toBottomOf="@id/headerCombo" />
            <ImageView
                android:id="@+id/img_searchCombo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_search"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@id/edt_searchCombo"
                app:layout_constraintRight_toRightOf="@id/edt_searchCombo"
                app:layout_constraintTop_toTopOf="@id/edt_searchCombo" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_foodCombo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/edt_searchCombo"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/edt_searchCombo"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toRightOf="@id/edt_searchCombo"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>