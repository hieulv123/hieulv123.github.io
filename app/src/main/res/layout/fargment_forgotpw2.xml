<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_fg_pw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_final"
        app:layout_constraintDimensionRatio="516:284"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/img_unionn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/ic_union"
        app:layout_constraintDimensionRatio="320:420"
        app:layout_constraintTop_toTopOf="@id/bg_fg_pw"
        tools:layout_editor_absoluteX="0dp" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_forgot_pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="88dp"
        android:text="Đổi mật khẩu"
        android:textSize="25sp"
        app:font_type="@string/roboto_bold"
        app:layout_constraintLeft_toLeftOf="@id/bg_fg_pw"
        app:layout_constraintRight_toRightOf="@id/bg_fg_pw"
        app:layout_constraintTop_toTopOf="@id/img_unionn" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_newpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="41dp"
        android:text="Mật khẩu mới"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_pass2" />

    <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
        android:id="@+id/edt_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingTop="16dp"
        android:paddingRight="19dp"
        android:paddingBottom="21dp"
        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_newpass" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ic_visibility_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_newpass"
        app:layout_constraintDimensionRatio="18:15"
        app:layout_constraintRight_toRightOf="@id/edt_newpass"
        app:layout_constraintTop_toTopOf="@+id/edt_newpass"
        app:layout_constraintWidth_percent="0.06" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/confignewpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Nhập lại mật khẩu mới"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_newpass" />

    <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
        android:id="@+id/edt_confignewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="19dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"
        android:paddingBottom="21dp"
        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confignewpass" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ic_visibility_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_confignewpass"
        app:layout_constraintDimensionRatio="18:15"
        app:layout_constraintRight_toRightOf="@id/edt_confignewpass"
        app:layout_constraintTop_toTopOf="@+id/edt_confignewpass"
        app:layout_constraintWidth_percent="0.06" />


    <Button
        android:id="@+id/btn_sendcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="66dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_button_orange"
        android:text="Đổi mật khẩu"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_confignewpass" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tele_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="64dp"
        android:text="@string/tele_support"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sendcode" />


</androidx.constraintlayout.widget.ConstraintLayout>