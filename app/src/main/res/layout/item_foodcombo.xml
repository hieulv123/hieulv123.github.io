<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:background="@drawable/custom_bgimg"
    android:padding="5dp"
    android:elevation="1dp">
    <ImageView
        android:id="@+id/img_comboFood"
        android:scaleType="centerCrop"
        android:layout_width="71dp"
        android:layout_height="71dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:textSize="13dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nameCombo"
        android:text="Combo gà rán A"
        app:font_type="@string/roboto_bold"
        app:layout_constraintLeft_toRightOf="@id/img_comboFood"
        app:layout_constraintTop_toTopOf="@id/img_comboFood"
        android:layout_marginLeft="15dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:textColor="@color/colorOrange"
        android:id="@+id/priceSale_combo"
        android:text="145.0000đ"
        app:layout_constraintTop_toTopOf="@id/tv_nameCombo"
        app:layout_constraintLeft_toRightOf="@id/tv_nameCombo"
        android:layout_marginLeft="17dp"
        />
    <View
        android:id="@+id/dot1"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_dot"
        app:layout_constraintTop_toBottomOf="@id/tv_nameCombo"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/img_comboFood"
        android:layout_marginLeft="19dp"/>
    <View
        android:id="@+id/dot2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_dot"
        app:layout_constraintTop_toBottomOf="@id/dot1"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/img_comboFood"
        android:layout_marginLeft="19dp"/>
    <View
        android:id="@+id/dot3"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_dot"
        app:layout_constraintTop_toBottomOf="@id/dot2"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toRightOf="@id/img_comboFood"
        android:layout_marginLeft="19dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/food1"
        android:textSize="9dp"
        android:textColor="#979797"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="2 Miếng gà ròn cay"
        app:layout_constraintLeft_toRightOf="@id/dot1"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nameCombo"
        android:layout_marginTop="6dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:textColor="#979797"
        android:id="@+id/food2"
        android:textSize="9dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="1 Pepsi"
        app:layout_constraintLeft_toLeftOf="@id/food1"
        app:layout_constraintTop_toBottomOf="@id/food1"
        android:layout_marginTop="3dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:textColor="#979797"
        android:id="@+id/food3"
        android:textSize="9dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="1 khoai tây chiên"
        app:layout_constraintLeft_toRightOf="@id/dot1"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toBottomOf="@id/food2"
        android:layout_marginTop="3dp"/>
    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:id="@+id/price_combo"
        android:text="150.0000đ"
        app:layout_constraintTop_toBottomOf="@id/priceSale_combo"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_nameCombo"
        android:layout_marginLeft="17dp"
        />









</androidx.constraintlayout.widget.ConstraintLayout>