<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="11dp"
    android:elevation="3dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_order"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/img_restaurant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/tv_name_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:text="Nhà hàng 1"
        android:textColor="#000"
        android:textSize="@dimen/dimen_text_name_restaurants"

        app:layout_constraintLeft_toRightOf="@+id/img_item_order"
        app:layout_constraintTop_toTopOf="parent" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/number_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Đơn hàng #4"
        android:textSize="@dimen/header_textview"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name_restaurant"
        app:layout_constraintTop_toBottomOf="@id/tv_name_restaurant" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/time_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="12 :40 PM 12/11/19"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name_restaurant"
        app:layout_constraintTop_toBottomOf="@+id/number_order" />

    <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginRight="16dp"
        android:text="100 000đ"
        android:textColor="@color/colorOrange"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_arrowright"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="7dp"
        android:paddingTop="4dp"
        android:paddingRight="7dp"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>