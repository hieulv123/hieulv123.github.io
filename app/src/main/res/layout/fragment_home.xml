<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/scrollview_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
            android:id="@+id/viewheader"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_navigationView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/marginLeft_home"
            android:layout_marginTop="@dimen/marginLeft_home"
            android:layout_marginBottom="@dimen/marginLeft_home"
            android:src="@drawable/ic_hambuger"
            app:layout_constraintBottom_toBottomOf="@id/viewheader"
            app:layout_constraintLeft_toLeftOf="@id/viewheader"
            app:layout_constraintTop_toTopOf="@id/viewheader" />

        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/ic_cart"
            app:layout_constraintBottom_toBottomOf="@id/viewheader"
            app:layout_constraintRight_toRightOf="@id/viewheader"
            app:layout_constraintTop_toTopOf="@id/viewheader" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_home"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@id/viewheader"
            app:layout_constraintTop_toBottomOf="@id/viewheader" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_search"
            android:hint="Search"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:textCursorDrawable="@drawable/custom_edit_text_cursor"
            app:layout_constraintLeft_toLeftOf="@id/recycle_home"
            app:layout_constraintRight_toRightOf="@id/recycle_home"
            app:layout_constraintTop_toBottomOf="@id/recycle_home" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts

            android:id="@+id/tv_outstanding_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Danh mục món ăn nổi bật"
            android:textSize="16dp"
            app:font_type="@string/helvetica_bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_search"
            app:layout_constraintTop_toBottomOf="@id/tv_search" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_search"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_search"
            app:layout_constraintRight_toRightOf="@id/tv_search"
            app:layout_constraintTop_toTopOf="@id/tv_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_hightlight_food"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/marginLeft_home"
            android:layout_marginTop="11dp"
            android:layout_marginRight="@dimen/marginRight_home"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toLeftOf="@id/recycle_home"
            app:layout_constraintRight_toRightOf="@id/tv_search"
            app:layout_constraintTop_toBottomOf="@id/tv_outstanding_food" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_res_near"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nhà hàng gần bạn"
            android:textSize="16dp"
            app:font_type="@string/roboto_bold"
            app:layout_constraintLeft_toLeftOf="@id/tv_outstanding_food"
            app:layout_constraintTop_toBottomOf="@id/rcv_hightlight_food" />

        <TextView
            android:id="@+id/tv_allres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:textColor="#2F80ED"
            app:layout_constraintRight_toRightOf="@id/tv_search"
            app:layout_constraintTop_toTopOf="@id/tv_res_near" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_nearRestaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginLeft_home"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/marginRight_home"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/rcv_hightlight_food"
            app:layout_constraintRight_toRightOf="@id/rcv_hightlight_food"
            app:layout_constraintTop_toBottomOf="@id/tv_res_near" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>