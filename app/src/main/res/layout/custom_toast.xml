<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toast_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/success_shape"
        android:paddingLeft="13dp"
        android:paddingTop="8dp"
        android:paddingRight="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/toast_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:src="@drawable/vector_outline"
            app:layout_constraintLeft_toLeftOf="@id/toast_type"
            app:layout_constraintRight_toLeftOf="@id/toast_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="This is custom toast"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toRightOf="@id/toast_icon"
            app:layout_constraintRight_toRightOf="@id/toast_type"
            app:layout_constraintTop_toTopOf="@id/toast_type" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>