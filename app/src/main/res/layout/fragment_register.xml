<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_back_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
                android:id="@+id/tv_dangky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Đăng Ký"
                android:textColor="@color/colorOrange"
                android:textSize="20sp"
                app:font_type="@string/roboto_bold"
                app:layout_constraintLeft_toLeftOf="@+id/ic_back"
                app:layout_constraintTop_toBottomOf="@id/ic_back" />

            <TextView
                android:id="@+id/tv_hoten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="20dp"
                android:layout_marginRight="56dp"
                android:text="Họ tên"
                android:textSize="@dimen/header_textview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dangky" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edthoten"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hoten" />

            <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
                android:id="@+id/tvngaysinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="12dp"
                android:text="Ngày sinh"
                android:textSize="@dimen/header_textview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edthoten" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtngaysinh"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:inputType="date"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvngaysinh" />

            <ImageView
                android:id="@+id/img_calendar"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_icon_calendar"
                app:layout_constraintBottom_toBottomOf="@id/edtngaysinh"
                app:layout_constraintRight_toRightOf="@id/edtngaysinh"
                app:layout_constraintTop_toTopOf="@+id/edtngaysinh"
                app:layout_goneMarginRight="16dp" />


            <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
                android:id="@+id/tv_cmnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="12dp"
                android:text="CMND/PassPort"
                android:textSize="@dimen/header_textview"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtngaysinh" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtcmnd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cmnd" />

            <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
                android:id="@+id/tv_sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="12dp"
                android:text="Số điện thoại"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtcmnd" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtsdt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sdt" />

            <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="12dp"
                android:text="Email"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtsdt" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:paddingLeft="13dp"
                android:paddingTop="13dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

            <TextView
                android:id="@+id/tv_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="18dp"
                android:text="Địa Chỉ"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtemail" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtdiachi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_diachi" />

            <TextView
                android:id="@+id/tv_matkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="18dp"
                android:text="Mật khẩu"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtdiachi" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtmatkhau"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:inputType="textPassword"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_matkhau" />

            <TextView
                android:id="@+id/view"
                android:layout_width="23dp"
                android:layout_height="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="19dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/ic_view"
                app:layout_constraintBottom_toBottomOf="@+id/edtmatkhau"
                app:layout_constraintDimensionRatio="18:13"
                app:layout_constraintRight_toRightOf="@id/edtmatkhau"
                app:layout_constraintTop_toTopOf="@+id/edtmatkhau"
                app:layout_constraintWidth_percent="0.08" />


            <TextView
                android:id="@+id/tv_configmatkhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_marginLeft"
                android:layout_marginTop="18dp"
                android:text="Nhập Lại Mật khẩu"
                android:textColor="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edtmatkhau" />

            <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
                android:id="@+id/edtconfigmatkhau"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_editextpng"
                android:inputType="textPassword"
                android:paddingLeft="13dp"
                android:paddingTop="12dp"
                android:paddingBottom="18dp"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_configmatkhau" />

            <Button
                android:id="@+id/btn_dangki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_button_orange"
                android:text="Đăng Ký"
                android:textColor="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtconfigmatkhau" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
