<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_dangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="16dp"
            android:text="Đăng Ký"
            android:textSize="20sp"
            app:font_type="@string/roboto_bold"
            app:layout_constraintLeft_toRightOf="@+id/ic_back"
            app:layout_constraintTop_toBottomOf="@id/ic_back" />

        <TextView
            android:id="@+id/tv_hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_marginLeft"
            android:layout_marginTop="20dp"
            android:layout_marginRight="56dp"
            android:text="Họ tên"
            android:textSize="@dimen/header_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_dangky"
            app:layout_constraintTop_toBottomOf="@+id/tv_dangky" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:id="@+id/edthoten"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_editextpng"
            android:hint="Họ Tên"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hoten" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tvngaysinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_marginLeft"
            android:layout_marginTop="12dp"
            android:text="Ngày sinh"
            android:textSize="@dimen/header_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edthoten" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:id="@+id/edtngaysinh"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_editextpng"
            android:hint="Ngày sinh"
            android:inputType="date"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvngaysinh" />

        <ImageView
            android:id="@+id/img_calendar"
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_icon_calendar"
            app:layout_constraintBottom_toBottomOf="@id/edtngaysinh"
            app:layout_constraintRight_toRightOf="@id/edtngaysinh"
            app:layout_constraintTop_toTopOf="@+id/edtngaysinh"
            app:layout_goneMarginRight="16dp" />


        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_cmnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="CMND/PassPort"
            android:textSize="@dimen/header_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtngaysinh" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:id="@+id/edtcmnd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/background_editextpng"
            android:hint="Cmnd/PassPort"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cmnd" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Số điện thoại"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtcmnd" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:id="@+id/edtsdt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/background_editextpng"
            android:hint="Số Điện Thoại"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sdt" />

        <tcom.hieulv.foodcustomer.customview.CustomTextViewFonts
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtsdt" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:id="@+id/edtemail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/background_editextpng"
            android:hint="Example@tcom.vn"
            android:paddingLeft="13dp"
            android:paddingTop="13dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email" />

        <TextView
            android:id="@+id/tv_diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:text="Địa Chi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtemail" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:layout_marginRight="16dp"
            android:id="@+id/edtdiachi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/background_editextpng"
            android:hint="Địa chỉ"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_diachi" />

        <TextView
            android:id="@+id/tv_matkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:text="Mật khẩu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtdiachi" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:layout_marginRight="16dp"
            android:id="@+id/edtmatkhau"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/background_editextpng"
            android:hint="Mật Khẩu"
            android:inputType="textPassword"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_matkhau" />

        <TextView
            android:id="@+id/view"
            android:layout_width="23dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_view"
            app:layout_constraintBottom_toBottomOf="@+id/edtmatkhau"
            app:layout_constraintDimensionRatio="18:13"
            app:layout_constraintRight_toRightOf="@id/edtmatkhau"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintTop_toTopOf="@+id/edtmatkhau"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_percent="0.08" />


        <TextView
            android:id="@+id/tv_configmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:text="Nhập Lại Mật khẩu"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtmatkhau" />

        <tcom.hieulv.foodcustomer.customview.CustomEditTextFonts
            android:layout_marginRight="16dp"
            android:id="@+id/edtconfigmatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/background_editextpng"
            android:hint="Nhập Lại Mật Khẩu"
            android:inputType="textPassword"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_configmatkhau" />

        <Button
            android:layout_marginRight="16dp"
            android:id="@+id/btn_dangki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_button_orange"
            android:text="Đăng Ký"
            android:textColor="#fff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtconfigmatkhau" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
